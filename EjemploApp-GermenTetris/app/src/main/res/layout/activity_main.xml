<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <View
        android:id="@+id/rectangulo"
        android:layout_width="100px"
        android:layout_height="100px"
        android:layout_centerInParent="true"
        android:background="#4CAF50" />


    <Button
        android:id="@+id/btnArriba"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_below="@+id/rectangulo"
        android:layout_marginTop="20dp"
        android:text="Arriba" />

    <Button
        android:id="@+id/btnAbajo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_below="@+id/btnArriba"
        android:layout_marginTop="40dp"
        android:text="Abajo" />


    <Button
        android:id="@+id/btnIzquierda"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_toStartOf="@+id/btnArriba"
        android:layout_below="@+id/btnArriba"
        android:layout_marginEnd="20dp"
        android:text="Izquierda" />

    <Button
        android:id="@+id/btnDerecha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_toEndOf="@+id/btnArriba"
        android:layout_below="@+id/btnArriba"
        android:layout_marginStart="20dp"
        android:text="Derecha" />

    <Button
        android:id="@+id/btnCambiarTamanio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnAbajo"
        android:layout_alignParentStart="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="40dp"
        android:backgroundTint="@color/orange"
        android:text="Cambiar TamaÃ±o" />


    <Button
        android:id="@+id/btnCambiarColor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnAbajo"
        android:layout_centerInParent="true"
        android:layout_marginStart="50dp"
        android:layout_marginTop="40dp"
        android:layout_toRightOf="@id/btnCambiarTamanio"
        android:backgroundTint="@color/orange"
        android:text="Cambiar Color" />

    <Button
        android:id="@+id/btnCambiarColorBorde"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnCambiarColor"
        android:layout_centerInParent="true"
        android:layout_marginStart="20dp"
        android:layout_toRightOf="@id/btnCambiarTamanio"
        android:backgroundTint="@color/orange"
        android:text="Cambiar Color Borde" />


</RelativeLayout>